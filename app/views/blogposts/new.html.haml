%body
  = stylesheet_link_tag "blogposts", :media => "all"
  .body-wrap
    = form_for(@blogpost) do |f|
      .field
        = f.label :title
        <br>
        = f.text_field :title
      .field
        = f.label :content
        <br>
        = f.text_area :content
      .actions
        = f.submit "Post"